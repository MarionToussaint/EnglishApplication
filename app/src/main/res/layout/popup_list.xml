<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/canard">

    <TextView
        android:text="Participle Form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/part"
        android:layout_marginRight="20dp"
        android:layout_alignBaseline="@+id/pret"
        android:layout_alignBottom="@+id/pret"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:textColor="@color/font2"
        android:textAlignment="center" />

    <TextView
        android:text="Translate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/trans"
        android:textColor="@color/poudré"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_below="@+id/pret"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Preterit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pret"
        android:textStyle="normal|bold"
        android:textColor="@color/font2"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/inf"
        android:layout_alignBottom="@+id/inf"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Definition of the verb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/definition"
        android:textColor="@color/font2"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_below="@+id/trans"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="First example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/example1"
        android:textColor="@color/poudré"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_below="@+id/definition"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Second exampleggddhhd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/example2"
        android:textColor="@color/poudré"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_below="@+id/example1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Thrid example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/example3"
        android:textColor="@color/poudré"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_below="@+id/example2"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="X"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/button"
        android:background="@color/font2"
        android:textSize="10sp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/part"
        android:layout_alignEnd="@+id/part"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="infinitive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/inf"
        android:textAllCaps="true"
        android:textStyle="normal|bold"
        android:textColor="@color/font2"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
